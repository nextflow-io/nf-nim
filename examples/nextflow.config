// Nextflow configuration for NIM plugin
params {
    // RFDiffusion parameters
    contigs = "A20-60/0 50-100"
    hotspot_res = ["A50","A51","A52","A53","A54"]
    diffusion_steps = 15
}

// NIM executor configuration
nim {
    rfdiffusion {
        endpoint = 'https://health.api.nvidia.com/v1/biology/ipd/rfdiffusion/generate'
    }
}

// Process configuration
process {
    // Configure the RFDiffusion executor
    withName: 'rfdiffusionTask' {
        executor = 'rfdiffusion'
        // Optional: configure resource requirements
        memory = '8 GB'
        time = '1h'
    }
}

// Enable plugins
plugins {
    id 'nf-nim'
} 